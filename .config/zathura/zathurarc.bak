### Settings from original zathurarc ###
set window-title-basename "false"
set selection-clipboard "clipboard"
set font 			"RobotoMono normal 12"
set adjust-open			"best-fit"
set page-padding		0

### zathura-pywal ###
# Allow recolor
set recolor 'true'

# Don't allow original hue when recoloring
set recolor-keephue 'false'

# Don't keep original image colors while recoloring
set recolor-reverse-video 'false'

# Command line completion entries
set completion-fg '#baacad'
set completion-bg '#090A0E'

# Command line completion group elements
set completion-group-fg '#633E43'
set completion-group-bg '#090A0E'

# Current command line completion element
set completion-highlight-fg '#090A0E'
set completion-highlight-bg '#baacad'

# Default foreground/background color
set default-bg rgba(9,10,14,1)

# Input bar
set inputbar-fg '#baacad'
set inputbar-bg '#090A0E'

# Notification
set notification-fg '#baacad'
set notification-bg '#090A0E'

# Error notification
set notification-error-fg '#baacad'
set notification-error-bg '#473C46'

# Warning notification
set notification-warning-fg '#baacad'
set notification-warning-bg '#473C46'

# Tab - TODO
# set tabbar-fg
# set tabbar-bg

# Focused tab - TODO
# set tabbar-focus-fg
# set tabbar-focus-bg

# Status bar
set statusbar-fg '#baacad'
set statusbar-bg '#090A0E'

# Highlighting parts of the document (e.g. show search results)
set highlight-color '#633E43'
set highlight-active-color '#633E43'

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(0,0,0,0)
set recolor-darkcolor '#baacad'

# 'Loading...' text
set render-loading-fg '#baacad'
set render-loading-bg '#090A0E'

# Index mode
set index-fg '#baacad'
set index-bg '#090A0E'

# Selected element in index mode
set index-active-fg '#090A0E'
set index-active-bg '#baacad'