include $HOME/.config/i3/workspaces.conf
set $mod Mod4
font pango:monospace 8

exec_always --no-startup-id ~/.config/i3/autostart.sh
exec_always --no-startup-id ~/.config/polybar/launch.sh --forest

#brightness control
bindsym XF86MonBrightnessUp exec light -A 5 # increase screen brightness
bindsym XF86MonBrightnessDown exec light -U 5 # decrease screen brightness

bindsym XF86TouchpadToggle exec ./toggle.sh

bindsym Control+Mod4+l exec "i3lock --image ~/wallpapers/os/void-1920x1080.png"
#exec "xautolock -detectsleep -time 3 -locker \"i3lock --image ~/wallpapers/os/void-1920x1080.png\""

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

new_window 1pixel
gaps inner 8
gaps outer 4

