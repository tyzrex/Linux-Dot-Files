include $HOME/.config/i3/workspaces.conf
set $mod Mod4
font pango:monospace 8

exec_always --no-startup-id ~/.config/i3/autostart.sh
exec_always --no-startup-id ~/.config/polybar/launch.sh --shades

#brightness control
bindsym XF86MonBrightnessUp exec light -A 5 # increase screen brightness
bindsym XF86MonBrightnessDown exec light -U 5 # decrease screen brightness

bindsym XF86TouchpadToggle exec ./toggle.sh

bindsym Control+Mod4+l exec "i3lock --image ~/wallpapers/os/void-1920x1080.png"
#exec "xautolock -detectsleep -time 3 -locker \"i3lock --image ~/wallpapers/os/void-1920x1080.png\""

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

new_window 1pixel
gaps inner 8
gaps outer 4

# Set colors from Xresources
# Change 'color7' and 'color2' to whatever colors you want i3 to use 
# from the generated scheme.
# NOTE: The '#f0f0f0' in the lines below is the color i3 will use if
# it fails to get colors from Xresources.
set_from_resource $fg i3wm.color5 #f0f0f0
set_from_resource $bg i3wm.color2 #f0f0f0

# class                 border  backgr. text indicator child_border
client.focused          $bg     $bg     $fg  $bg       $bg
client.focused_inactive $bg     $bg     $fg  $bg       $bg
# client.unfocused        $bg     $bg     $fg  $bg       $bg
client.unfocused        #333333 #222222 #888888 #292d2e   #222222
client.urgent           $bg     $bg     $fg  $bg       $bg
client.placeholder      $bg     $bg     $fg  $bg       $bg

client.background       $bg

# PROTIP: You can also dynamically set dmenu's colors this way:
bindsym $mod+d exec dmenu_run -nb "$fg" -nf "$bg" -sb "$bg" -sf "$fg"
